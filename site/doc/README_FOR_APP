#photo-form
  = semantic_form_for photo, :url => url, :remote => true do |f|
    #qq_fileuploader.offset-label-width

javascript:
  var uploader = new qq.FileUploader({
    element: $('#qq_fileuploader')[0],
    action: $('#new_hotel_image').attr('action'),
    params: {
      authenticity_token: $('meta[name="csrf-token"]').attr('content')
    },
    allowedExtensions: ['png','jpg','jpeg','gif'],
    debug: true,
    onSubmit: function(id, fileName){},
    onComplete: function(id, fileName, response){
      d = $('#photo-list')
      d.append(response.data);
    }
  });